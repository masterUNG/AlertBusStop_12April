<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="rsu.siriwimon.pakdeeporn.alertbusstop.MainActivity">

    <Button
        android:text="Add Bus Stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true" />

    <ListView
        android:layout_below="@+id/relTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/livBusStop"
        android:layout_above="@+id/button" />

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/relTop"
        android:paddingTop="@dimen/padding1"
        android:paddingBottom="@dimen/padding2"
        android:paddingRight="@dimen/padding2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imvDelete"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imvEdit"
            android:layout_toLeftOf="@+id/imvDelete"
            android:src="@mipmap/ic_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
